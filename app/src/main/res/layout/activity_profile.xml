<!-- activity_profile.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A7B8BA">

    <TextView
        android:id="@+id/txtName4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="MUHAMMAD FAHMI AL FALQI"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="215150200111055"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imgProfile1"
        android:layout_width="163dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/Fahmi" />

    <TextView
        android:id="@+id/txtName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Person 2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="nim"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imgProfile2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile2"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_background"
        android:adjustViewBounds="true" />

</LinearLayout>
